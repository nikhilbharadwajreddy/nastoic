{
    "version": 2,
    "builds": [
      { "src": "index.html",   "use": "@vercel/static" },
      { "src": "profile.html", "use": "@vercel/static" },
      { "src": "enhanced-review-new.html", "use": "@vercel/static" },
      { "src": "clerk.js",     "use": "@vercel/static" },
      { "src": "css/**/*.css", "use": "@vercel/static" },
      { "src": "js/**/*.js",   "use": "@vercel/static" }
    ],
    "routes": [
      { "src": "/",            "dest": "/index.html" },
      { "src": "/profile.html","dest": "/profile.html" },
      { "src": "/enhanced-review-new.html","dest": "/enhanced-review-new.html" },
      { "handle": "filesystem" },
      { "src": "/(.*)",        "dest": "/index.html" }
    ]
  }
  